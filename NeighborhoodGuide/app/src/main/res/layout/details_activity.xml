<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context="com.example.asagir.neighborhoodguide.DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/buttonMakeFavorite"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:elevation="8dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="322dp"
            android:src="@drawable/fav"
            />

        <ImageView
            android:id="@+id/detailsViewTopImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/crescentgrill"
            android:layout_marginBottom="18dp"
            android:scaleType="centerCrop"
            android:maxHeight="350dp"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailsViewTopImage"
            android:textSize="35sp"
            android:textStyle="bold"
            android:text="Name"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/cuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="Cuisine"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cuisine"
            android:layout_marginBottom="20dp"
            android:textSize="25sp"
            android:text="Address"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:textSize="25sp"
            android:text="Description"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />


        <!--<ImageView-->
